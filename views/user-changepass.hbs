<div class="row  justify-content-center ">
  <h2 class=" p-0 m-0 text-center text-dark font-weight-bolder ">Thay đổi mật khẩu</h2>
</div>

<div class="container  bg-light p-5 ">
  <form action="/User/ChangePass" method="post">
    <div class="row mt-3 mb-3 justify-content-center">
      <label class="col-lg-3 col-md-3 col-sm-6" for="old">Mật khẩu cũ</label>
      <input type="password" name="old" id="old" required class="">
    </div>

    <div class="row mt-3 mb-3 justify-content-center">
      <label class="col-lg-3 col-md-3 col-sm-6" for="new">Mật khẩu mới</label>
      <input type="password" name="new" id="new" required class="">
    </div>


    <div class="row mt-5 mb-3 justify-content-center">
      <input class="btn bg-primary text-light" type="submit" value="Thay đổi mật khẩu">
    </div>

  </form>

</div>
<script src="/node_modules/sweetalert2/dist/sweetalert2.all.min.js"></script>
<script>
  if ("{{check}}" != "") {
    Swal.fire({
      position: 'center',
      icon: 'error',
      title: '{{check}}',
      showConfirmButton: false,
      timer: 1500
    })
  }
</script>